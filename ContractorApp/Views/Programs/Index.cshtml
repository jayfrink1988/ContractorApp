@model IEnumerable<ContractorApp.Content.Program>

@{
    ViewBag.Title = "Program List";
}

<h2>Programs</h2>

<p>
    @Html.ActionLink("Create New Program", "Create", "Programs")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProgramName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProgramName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProgramID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProgramID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProgramID }) |
            @Html.ActionLink("View Contractors", "Program", "Contractors", new { id = item.ProgramID}, null)

        </td>
    </tr>
}

</table>
